@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Produtos";
    //var products = ViewBag.Products;
}
<h1>@ViewData["Title"]</h1>
<hr />

<div>
    <div>
        <a class="btn btn-primary" asp-action="Register" asp-controller="Product" 
            role="button">Novo Produto</a>
        <a class="btn btn-danger" asp-action="Index" asp-controller="Home" 
            role="button">Voltar</a>
    </div>
</div>
<hr />


@if(Model.Count() > 0)
{
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Preço</th>
                    <th scope="col">Estoque</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>
                            @p.Name
                        </td>
                        <td>
                            @p.Price
                        </td>
                        <td>
                            @p.Stock
                        </td>
                        <td>
                            @p.CategoryName
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-pid="@p.ProductId" 
                                    class="btn btn-outline-danger" title="deletar">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                            <a asp-action="Register" asp-route-pid="@p.ProductId" 
                                    class="btn btn-outline-warning" title="atualizar">
                                <i class="bi bi-clipboard-check"></i>
                            </a>    
                        </td>
                
                </tr>
             }
        </tbody>
    </table>
    </div>
}
else
{
    <h1>Sem produtos para serem exibidos.</h1>
}


